<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.zahid.homeautomation">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/meter"
        android:label="@string/app_name"
        android:roundIcon="@drawable/meter"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".BarChartActivity" />
        <activity android:name=".AccountList" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/MainPage" />
        <activity android:name=".LineChartActivity" />
        <activity
            android:name=".FirstPageActivity"
            android:theme="@style/MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogInActivity"
            android:theme="@style/MainPage" />
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".IndexActivity"
            android:label="@string/title_activity_index"
            android:theme="@style/AppTheme" />
        <activity android:name=".ProfileEditActivity" />
        <activity android:name=".ProfileSettingActivity" />
        <activity android:name=".ProfileViewActivity"></activity>
    </application>

</manifest>